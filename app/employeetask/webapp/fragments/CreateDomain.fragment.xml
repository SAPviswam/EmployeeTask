<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
  <Dialog
    id="idCreateDomainDialog"
    title="Create New Domain"
    draggable="true"
    resizable="true"
    contentWidth="400px"
  >
    <VBox id="idCreateDomainVBox" class="sapUiSmallMargin">
      <Input id="idInputDomain" placeholder="Enter Domain" />
    </VBox>

    <beginButton>
      <Button id="idCreateDomainSaveButton" text="Save" press="onSaveNewDomain" />
    </beginButton>
    <endButton>
      <Button id="idCreateDomainCancelButton" text="Cancel" press="onCancelCreateDomain" />
    </endButton>
  </Dialog>
</core:FragmentDefinition>
